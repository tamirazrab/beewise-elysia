{
	"info": {
		"name": "Beewise API",
		"description": "1. Run **POST /api/auth/register** or **POST /api/auth/login** to get `{ \"token\", \"user\" }`.\n2. Set collection variable **bearer_token** to the token. Protected requests use Authorization: Bearer.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [{"key": "token", "value": "{{bearer_token}}", "type": "string"}]
	},
	"variable": [
		{"key": "base_url", "value": "http://localhost:3000"},
		{"key": "bearer_token", "value": ""},
		{"key": "session_id", "value": "00000000-0000-0000-0000-000000000001"},
		{"key": "vocabulary_id", "value": "00000000-0000-0000-0000-000000000001"},
		{"key": "quiz_id", "value": "00000000-0000-0000-0000-000000000001"},
		{"key": "recording_id", "value": "00000000-0000-0000-0000-000000000001"}
	],
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health check",
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{base_url}}/health",
						"description": "Liveness/readiness"
					}
				}
			]
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"request": {
						"auth": {"type": "noauth"},
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json", "type": "text"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
						},
						"url": "{{base_url}}/api/auth/login",
						"description": "Returns { token, user }. Set bearer_token from response."
					}
				},
				{
					"name": "Register",
					"request": {
						"auth": {"type": "noauth"},
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json", "type": "text"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"name\": \"Alice Smith\"\n}"
						},
						"url": "{{base_url}}/api/auth/register",
						"description": "Returns { token, user }. Set bearer_token from response."
					}
				},
				{
					"name": "Sign up (Better Auth)",
					"request": {
						"auth": {"type": "noauth"},
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json", "type": "text"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"name\": \"Alice Smith\",\n  \"callbackURL\": \"/\"\n}"
						},
						"url": "{{base_url}}/api/auth/sign-up/email"
					}
				},
				{
					"name": "Sign in (Better Auth)",
					"request": {
						"auth": {"type": "noauth"},
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json", "type": "text"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"callbackURL\": \"/\"\n}"
						},
						"url": "{{base_url}}/api/auth/sign-in/email"
					}
				},
				{
					"name": "Sign out",
					"request": {
						"method": "POST",
						"header": [],
						"url": "{{base_url}}/api/auth/sign-out"
					}
				},
				{
					"name": "Get session",
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{base_url}}/api/auth/get-session"
					}
				},
				{
					"name": "Request password reset",
					"request": {
						"auth": {"type": "noauth"},
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json", "type": "text"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"alice@example.com\",\n  \"redirectTo\": \"/reset-password\"\n}"
						},
						"url": "{{base_url}}/api/auth/request-password-reset"
					}
				},
				{
					"name": "Reset password",
					"request": {
						"auth": {"type": "noauth"},
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json", "type": "text"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"your-reset-token-from-email\",\n  \"newPassword\": \"NewSecurePass456!\"\n}"
						},
						"url": "{{base_url}}/api/auth/reset-password"
					}
				}
			]
		},
